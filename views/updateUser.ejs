<html>
    <head>
        <title>Update User</title>
    </head>
    <body>
        <%
            if(data)
            {

            for(let i=0 ; i<data.length ; i++)
            {

            %>

            <form action="/updatedt" method="post">
                <input type="hidden" name="id" value="<%= data[i].uid %>">
                FIRSTNAME <input type="text" value="<%= data[i].ufname %>"
                name="fname"><br>
                LASTNAME <input type="text" value="<%= data[i].ulname %>"
                name="lname"><br>
                Email <input type="text" value="<%= data[i].uemail %>"
                name="email"><br>
                contact <input type="text" value="<%= data[i].ucontact %>"
                name="contact"><br>
                password <input type="password" value="<%= data[i].upassword %>"
                name="password"><br>
                <input type="submit" value="update">
            </form>

            <%
                }

                }
                %>
            </body>
        </html>